{
    "name": "talethreads-backend",
    "version": "1.0.0",
    "description": "Talethreads Backend Microservice",
    "main": "dist/server.js",
    "scripts": {
        "build": "tsc",
        "dev": "tsx watch src/server.ts",
        "start": "node dist/server.js",
        "clean": "rm -rf dist",
        "prebuild": "npm run clean",
        "postbuild": "tsc-alias",
        "type-check": "tsc --noEmit",
        "format": "prettier --write \"src/**/*.{ts,js,json}\"",
        "format:check": "prettier --check \"src/**/*.{ts,js,json}\"",
        "lint": "npm run type-check && npm run format:check",
        "db:generate": "drizzle-kit generate",
        "db:migrate": "tsx src/db/migrate.ts",
        "db:rollback": "tsx src/db/migrate.ts rollback",
        "db:push": "drizzle-kit push",
        "db:studio": "drizzle-kit studio",
        "db:seed": "tsx src/db/seed.ts",
        "docker:dev": "DOCKERFILE=docker/Dockerfile.dev docker-compose -f docker/docker-compose.yml --env-file docker/.env up -d",
        "docker:dev:build": "DOCKERFILE=docker/Dockerfile.dev docker-compose -f docker/docker-compose.yml --env-file docker/.env up --build -d",
        "docker:dev:down": "docker-compose -f docker/docker-compose.yml down",
        "deploy:start": "node dist/server.js"
    },
    "author": "hrsh22",
    "license": "MIT",
    "dependencies": {
        "compression": "^1.7.4",
        "cors": "^2.8.5",
        "dotenv": "^16.3.1",
        "drizzle-orm": "^0.44.4",
        "express": "^4.18.2",
        "express-rate-limit": "^7.1.5",
        "helmet": "^7.1.0",
        "pg": "^8.16.3",
        "redis": "^5.8.2",
        "uuid": "^9.0.1",
        "winston": "^3.11.0",
        "zod": "^3.22.4"
    },
    "devDependencies": {
        "@types/compression": "^1.7.5",
        "@types/cors": "^2.8.17",
        "@types/express": "^4.17.21",
        "@types/node": "^20.10.0",
        "@types/pg": "^8.15.5",
        "@types/redis": "^4.0.10",
        "@types/uuid": "^9.0.7",
        "drizzle-kit": "^0.31.4",
        "prettier": "^3.1.0",
        "tsc-alias": "^1.8.16",
        "tsx": "^4.6.2",
        "typescript": "^5.3.2"
    },
    "engines": {
        "node": ">=22.0.0",
        "npm": ">=8.0.0"
    }
}
